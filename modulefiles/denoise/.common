#%Module1.0

module-whatis https://github.com/gavalian/driftchambers

prereq .system
prereq hipo

set v [getvenv HIPO]
set d [home]/[osrelease]/local/driftchambers/$version/$v

warndir $d "denoise/$version is not available for hipo/$v"

prepend-path PATH $d/bin
setenv DENOISING_NETWORKS $d/share/denoising/network

